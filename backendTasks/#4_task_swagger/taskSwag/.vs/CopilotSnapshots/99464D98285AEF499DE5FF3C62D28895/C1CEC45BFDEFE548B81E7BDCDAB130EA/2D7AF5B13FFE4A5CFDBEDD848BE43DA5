using Microsoft.AspNetCore.Mvc;
using taskSwag.Models;
using Microsoft.EntityFrameworkCore;

namespace taskSwag.Controllers
{
    [ApiController]
    [Route("[controller]")]
    public class UserController : ControllerBase
    {
        private readonly Models.DbContext _context;

        public UserController(Models.DbContext context)
        {
            _context = context;
        }

        [HttpGet]
        public async ValueTask<IResult> GetUsers()
        {
            return Results.Ok(await _context.Users.ToListAsync());
        }

        [HttpGet("{id}")]
        public async ValueTask<IResult> GetUserById(int id)
        {
            var user = await _context.Users.FindAsync(id);
            return user is not null ? Results.Ok(user) : Results.NotFound();
        }
        private async ValueTask<User?> GetUserEntityAsync(int id)
        {
            return await _context.Users.FindAsync(id);
        }

        [HttpPost]
        public async ValueTask<IResult> CreateUser(UserDto userDto)
        {
            var user = new User
            {
                Name = userDto.Name,
                Phone = userDto.Phone,
                LocationId = userDto.LocationId
            };
            _context.Users.Add(user);
            await _context.SaveChangesAsync();
            return Results.Created($"/User/{user.Id}", user);
        }

        [HttpPut("{id}")]
        public async ValueTask<IResult> UpdateUser(int id, UserDto userDto)
        {
            var existingUser = await GetUserEntityAsync(id);
            if (existingUser is null) return Results.NotFound();
            
            existingUser.Name = userDto.Name;
            existingUser.Phone = userDto.Phone;
            existingUser.LocationId = userDto.LocationId;
            
            _context.Entry(existingUser).State = EntityState.Modified;
            await _context.SaveChangesAsync();
            
            var updatedUser = await GetUserEntityAsync(id);
            return updatedUser is not null ? Results.Ok(updatedUser) : Results.NoContent();
        }

        [HttpDelete("{id}")]
        public async ValueTask<IResult> DeleteUser(int id)
        {
            var user = await GetUserEntityAsync(id);
            if (user is null) return Results.NotFound();
            _context.Users.Remove(user);
            await _context.SaveChangesAsync();
            return Results.NoContent();
        }
    }
}
